{
	"compilerOptions": {
		// "skipLibCheck": true,
		"esModuleInterop": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"baseUrl": ".", // The base directory for resolving paths
		"paths": {
			"@/*": ["src/*"] // Map '@' to the 'src' folder
		},
		"noEmit": true, // Prevent TypeScript from emitting files
		"skipLibCheck": true // Skip library type checking
	},
	"moduleResolution": "node",
	"include": ["src"], // Include the source files
	"exclude": ["node_modules", "dist"], // Exclude unnecessary files
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.node.json"
		}
	]
}
